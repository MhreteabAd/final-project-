 }

 
 nav ul{
  float: right;
  margin-right: 20px;

 }
 nav ul li{
  display: inline;
  line-height: 80px;
  margin: 0 5px;

 }
 nav ul li a{
  color: rgb(121, 121, 186);
  font-size: 17px;
  padding: 7px 13px;
  border-radius: 7px;
  text-transform: uppercase;
 }
 a:hover{
  background: blue;
  transition: 0.5s;
 }
 .checkbtn{
  font-size:  30px;
  color: white;
  float: right;
  line-height: 80px;
  margin-right: 40px;
  cursor: pointer;
  display: none;
 }
 #check{
