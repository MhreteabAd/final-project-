 }
 body{
  background: radial-gradient(circle at 100%, #333, #333 50%, #eee 75%, #333 75%);
 }

 nav {
  background: rgb(16, 1, 1);
  width: 100%;
  height: 100px;
  
 }
 img{
  height: 60px;
  width: 250px;
